# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.css]
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.styl]
block_comment_start = //
max_line_length = 80

[*.md]
trim_trailing_whitespace = false
block_comment_start = <!--
block_comment_end = -->
